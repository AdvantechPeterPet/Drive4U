              <div class="radio-group">
                <input type="radio" id="admin" name="userType" value="admin" checked>
                <label for="admin" class="toggle-label">Admin</label>

                <input type="radio" id="owner" name="userType" value="owner">
                <label for="owner" class="toggle-label-owner">Owner</label>
              </div>
              

              <div id="adminForm" style="display: block;">
              <label for="admin">Admin</label>
               <form id="user" method="post" action='/signIn'>

              <label for="id">ID</label>
              <input id="id" name="id" type="text" required placeholder="Your ID">
            
              <label for="password">Password</label>
              <input id="passwd" name='password' type="password" required placeholder="Your Password">
              <button>
                  Sign In
              </button>

        </form>
        </div>
        <div id="ownerForm" style="display: none;">
              <label for="owner">Owner</label>
               <form id="user" method="post" action='/signInOwner'>

              <label for="id">ID</label>
              <input id="id" name="id" type="text" required placeholder="Your ID">
            
              <label for="password">Password</label>
              <input id="passwd" name='password' type="password" required placeholder="Your Password">
              <button>
                  Sign In
              </button>
        </form>
            </div>

        <script>
          const adminRadio = document.getElementById('admin');
          const ownerRadio = document.getElementById('owner');
          const adminForm = document.getElementById('adminForm');
          const ownerForm = document.getElementById('ownerForm');

          adminRadio.addEventListener('change', () => {
            if (adminRadio.checked) {
              adminForm.style.display = 'block';
              ownerForm.style.display = 'none';
            }
          });

          ownerRadio.addEventListener('change', () => {
            if (ownerRadio.checked) {
              adminForm.style.display = 'none';
              ownerForm.style.display = 'block';
            }
          });
        </script>
            
