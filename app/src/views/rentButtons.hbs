<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Rent Buttons</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <!-- Rent Start 버튼 -->
        <button id="rentstart">Rent Start</button>

        <!-- Rent End 버튼 -->
        <button id="rentend">Rent End</button>
    </div>
    
    <script>
        $(document).ready(function() {
            $('#rentstart').click(function() {
                // rentstart 버튼 클릭 시 실행할 AJAX 요청
                $.post('/rentButtons/startRental', {
                    customerID: 'cust1', // 예시 데이터, 실제로는 적절한 데이터를 사용해야 함
                    carName: 'Car1'      // 예시 데이터
                }, function(response) {
                    alert(response); // 서버 응답 메시지를 알림으로 표시
                });
            });

            $('#rentend').click(function() {
                // rentend 버튼 클릭 시 실행할 AJAX 요청
                $.post('/rentButtons/endRental', {
                    rentalID: 1 // 예시 데이터, 실제로는 적절한 데이터를 사용해야 함
                }, function(response) {
                    alert(response); // 서버 응답 메시지를 알림으로 표시
                });
            });
        });
    </script>
</body>
</html>
